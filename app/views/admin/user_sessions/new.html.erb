<% content_for(:title, t('.title')) %>
<div class="min-h-screen flex flex-col justify-center items-center bg-white">
  <div class="sticky top-0 bg-slate-800 text-white py-2">
  </div>
  <div class="mx-auto w-full max-w-md text-center space-y-8">
    <div class="bg-white py-6 sm:py-8 lg:py-12">
      <div class="mx-auto max-w-screen-2xl px-4 md:px-8">
        <h2 class="mb-4 text-center text-2xl font-bold text-gray-800 md:mb-8 lg:text-3xl"><%= t('.title') %></h2>

        <%= form_with url: admin_login_path, method: :post, local: true, class: "mx-auto max-w-lg rounded-lg border" do |f| %>
          <div class="flex flex-col gap-4 p-4 md:p-8">
            <div>
              <%= f.label :email, User.human_attribute_name(:email), class: "mb-2 inline-block text-sm text-gray-800 sm:text-base" %>
              <%= f.email_field :email, class: "w-full rounded border bg-gray-50 px-3 py-2 text-gray-800 outline-none ring-indigo-300 transition duration-100 focus:ring", name: "email" %>
            </div>

            <div>
              <%= f.label :password, User.human_attribute_name(:password), class: "mb-2 inline-block text-sm text-gray-800 sm:text-base" %>
              <%= f.password_field :password, class: "w-full rounded border bg-gray-50 px-3 py-2 text-gray-800 outline-none ring-indigo-300 transition duration-100 focus:ring", name: "password" %>
            </div>

            <%= f.submit (t 'defaults.login'), class: "block rounded-lg bg-gray-800 px-8 py-3 text-center text-sm font-semibold text-white outline-none ring-gray-300 transition duration-100 hover:bg-gray-700 focus-visible:ring active:bg-gray-600 md:text-base" %>
          </div>
        <% end %>
        <div class="flex justify-center mt-4">
          <%= link_to (t '.to_user'), new_admin_user_path, class: "text-xl link link-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>
