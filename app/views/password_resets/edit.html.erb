<% content_for(:title, t('.title')) %>
<div class="min-h-screen flex flex-col justify-center items-center">
  <div class="sticky top-0 bg-slate-800 text-white py-2">
  </div>
  <div class="mx-auto w-full max-w-md text-center space-y-8">
    <h1 class="text-center text-4xl font-shin text-default text-gray-700"><%= t('.title') %></h1>
    <%= form_with model: @user, url: password_reset_path(@token), local: true do |f| %>
      <div class="form-group pb-20 text-2xl">
        <%= f.label :password, class: "text-gray-800" %>
        <%= f.password_field :password, class: "input input-bordered input-accent w-full max-w-full text-gray-700", style: "background-color: rgba(255, 255, 255, 0);" %>
      </div>
      <div class="mt-8"></div>
      <div class="form-group pb-20 text-2xl">
        <%= f.label :password_confirmation, class: "text-gray-800" %>
        <%= f.password_field :password_confirmation, class: "input input-bordered input-accent w-full max-w-full text-gray-700", style: "background-color: rgba(255, 255, 255, 0);" %>
      </div>
      <div class="mt-8"></div>
      <div class="d-grid pb-20">
        <%= f.submit t('defaults.update'), class: 'btn btn-accent text-white' %>
      </div>
    <% end %>
  </div>
</div>
