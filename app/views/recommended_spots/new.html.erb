<%= stylesheet_link_tag 'custom', media: 'all', 'data-turbolinks-track': 'reload' %>

<% content_for(:title, t('.title')) %>
<div class="min-h-screen flex flex-col justify-center items-center">
  <div class="py-6 sm:py-8 lg:py-12 flex justify-center items-center">
    <div class="mx-auto max-w-screen-2xl px-4 md:px-8">
      <div class="mb-10 md:mb-16" style="margin-top: 20px;">
        <h2 class="mb-4 text-center text-2xl font-bold text-gray-800 md:mb-6 lg:text-3xl"><%= t('.title') %></h2>
      </div>

      <%= form_with model: @recommended_spot, local: true, class: "mx-auto max-w-lg rounded-lg border h-full flex flex-col justify-center" do |f| %>
        <%= render 'shared/error_messages', model: f.object %>
        <div class="mb-4">
          <div class="flex justify-start">
            <%= f.label :name, class: "input-label pr-4 text-default text-gray-700" %>
          </div>
          <%= f.text_field :name, class: "input input-bordered input-accent w-full text-gray-700", style: "background-color: rgba(255, 255, 255, 0);" %>
        </div>

        <div class="mb-4">
          <div class="flex justify-start">
            <%= f.label :text, class: "input-label pr-4 text-default text-gray-700" %>
          </div>
          <%= f.text_area :text, class: "input input-bordered input-accent w-full h-32 text-gray-700 resize-none", style: "background-color: rgba(255, 255, 255, 0);" %>
        </div>

        <div class="mb-4">
          <div class="flex justify-start">
            <%= f.label :address, class: "input-label pr-4 text-default text-gray-700" %>
          </div>
          <%= f.text_field :address, class: "input input-bordered input-accent w-full text-gray-700", style: "background-color: rgba(255, 255, 255, 0);" %>
        </div>

        <div class="mb-4">
          <div class="flex justify-start">
            <%= f.label :img, class: "mb-2 inline-block text-sm text-gray-800 sm:text-base" %>
          </div>
            <%= f.file_field :img, class: 'image-input' %>
          <div class="image-preview" id="new-image"></div>
        </div>

        <%= f.submit t('defaults.create'), class: "btn btn-accent text-white w-full" %>
      <% end %>
    </div>
  </div>
</div>
