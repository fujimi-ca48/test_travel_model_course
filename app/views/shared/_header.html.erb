<header class="header bg-custom-1">
  <div class="container mx-auto flex flex-wrap flex-col md:flex-row items-center py-2">
    <%= link_to image_tag('logo.png'), root_path, class: "py-2" %>
    <div class="ml-auto header">
      <% if logged_in? || session[:user_id].present? %>
        <%= link_to t('defaults.logout'), logout_path, data: { turbo_method: :delete }, class: "btn btn-outline btn-accent mx-1" %>
      <% else %>
        <%= link_to t('defaults.login'), login_path, class: "btn btn-outline btn-accent mx-1" %>
        <%= link_to t('defaults.user_new'), new_user_path, class: "btn btn-outline btn-accent mx-1" %>
      <% end %>
    </div>
  </div>
</header>

<div class="border-t border-neutral"></div>
