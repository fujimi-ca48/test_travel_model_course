<div class="header_image bg-custom">
  <div class="container mx-auto flex flex-wrap flex-col md:flex-row items-center py-2">
    <%= link_to image_tag('logo.jpg', size: '300x300'), root_path, class: "py-2" %>
   <div class="ml-auto header">
      <% if logged_in? %>
        <%= link_to 'ログアウト', "#", data: { turbo_method: :delete }, class: "btn btn-outline btn-accent mx-1" %>
      <% else %>
        <%= link_to "ログイン", "#", class: "btn btn-outline btn-accent mx-1" %>
        <%= link_to "新規登録", new_user_path, class: "btn btn-outline btn-accent mx-1" %>
      <% end %>
    </div>
  </div>
</div>