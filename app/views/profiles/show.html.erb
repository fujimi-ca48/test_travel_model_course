<%= stylesheet_link_tag 'custom', media: 'all', 'data-turbolinks-track': 'reload' %>

<% content_for(:title, t('.title')) %>
<div class="main_image">
  <div class="text-center">
    <div class="text-4xl md:grid justify-items-stretch">
      <div class="font-bold md:w-2/3 xl:w-1/3 justify-self-center pt-20 pb-10 text-gray-800"><%= t('.title') %></div>
      <div><%= link_to t('defaults.edit'), edit_profile_path, class: 'btn btn-accent text-brown mb-20' %></div>
    </div>
  </div>
  <div class="mt-8"></div>
  <div class="flex justify-center text-center">
    <div class="md">
      <div class="mb-10">
        <div class="font-bold text-2xl text-gray-800" scope="row"><%= t(User.human_attribute_name(:name)) %></div>
        <div class="font-bold text-2xl text-gray-800"><%= current_user.name %></div>
      </div>
      <div class="mb-10">
        <div class="font-bold text-2xl text-gray-800" scope="row"><%= t(User.human_attribute_name(:email)) %></div>
        <div class="font-bold text-2xl text-gray-800"><%= current_user.email %></div>
      </div>
      <div class="mb-10 text-center">
        <div class="font-bold text-2xl text-gray-800" scope="row"><%= t(User.human_attribute_name(:avatar)) %></div>
        <div class="avatar">
          <div class="w-16 h-16 rounded-full overflow-hidden mx-auto"> <!-- 中央に配置するために mx-auto クラスを追加 -->
            <%= image_tag current_user.avatar.url, alt: "Avatar", class: "w-full h-full object-cover" %>
          </div>
        </div>
      </div>
      <div class="mt-8"></div>
    </div>
  </div>
</div>

<input type="checkbox" checked="checked" id="favorite" name="favorite-checkbox" value="favorite-button">
<label for="favorite" class="container">
  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-heart"><path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path></svg>
  <div class="action">
    <span class="option-1">Add to Favorites</span>
    <span class="option-2">Added to Favorites</span>
  </div>
</label>
