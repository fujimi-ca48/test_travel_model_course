<%= stylesheet_link_tag 'custom', media: 'all', 'data-turbolinks-track': 'reload' %>

<% content_for(:title, t('.title')) %>
<div class="main_image">
  <div class="text-center">
    <div class="text-4xl md:grid justify-items-stretch">
      <div class="font-bold md:w-2/3 xl:w-1/3 justify-self-center pt-20 pb-10 text-gray-800"><%= t('.title') %></div>
      <div><%= link_to t('defaults.edit'), edit_admin_user_path(@user), class: 'btn btn-accent text-brown mb-20' %></div>
    </div>
  </div>
  <div class="mt-8"></div>
  <div class="flex justify-center text-center">
    <div class="md">
      <div class="mb-10">
        <div class="font-bold text-2xl text-gray-800" scope="row"><%= t(User.human_attribute_name(:name)) %></div>
        <div class="font-bold text-2xl text-gray-800"><%= @user.name %></div>
      </div>
      <div class="mb-10">
        <div class="font-bold text-2xl text-gray-800" scope="row"><%= t(User.human_attribute_name(:email)) %></div>
        <div class="font-bold text-2xl text-gray-800"><%= @user.email %></div>
      </div>
      <div class="mb-10 text-center">
        <div class="font-bold text-2xl text-gray-800" scope="row"><%= t(User.human_attribute_name(:avatar)) %></div>
        <div class="avatar">
          <div class="w-16 h-16 rounded-full overflow-hidden mx-auto">
            <%= image_tag @user.avatar.url, alt: "Avatar", class: "w-full h-full object-cover" %>
          </div>
        </div>
      </div>
      <div class="mt-8"></div>
    </div>
  </div>
</div>
